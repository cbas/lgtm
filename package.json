{
  "name": "lgtm",
  "version": "1.0.0",
  "description": "Code review with :+1: and :-1:",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon & lt -p 3000 -s lgtm",
    "test": "npm run test-tdd && npm run test-audit && npm run test-lint",
    "test-tdd": "mocha",
    "test-audit": "node-license-validator --deep --production --allow-licenses ISC MIT BSD WTFPL BSD-3-Clause --allow-packages form-data@0.0.3 install@0.1.8 mime@1.2.7 request@2.11.4 wordwrap@0.0.2 yargs@1.3.3",
    "test-lint": "standard"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cofounders/lgtm.git"
  },
  "author": "Sebastiaan Deckers <seb@cf.sg>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/cofounders/lgtm/issues"
  },
  "homepage": "https://github.com/cofounders/lgtm#readme",
  "dependencies": {
    "babel": "^5.8.23",
    "bluebird": "^2.10.2",
    "escape-string-regexp": "^1.0.3",
    "express": "^4.13.3",
    "github": "^0.2.4",
    "github-webhook-handler": "^0.5.0",
    "localtunnel": "^1.7.0",
    "morgan": "^1.6.1",
    "url-template": "^2.0.6"
  },
  "devDependencies": {
    "babel-eslint": "^4.1.3",
    "chai": "^3.3.0",
    "mocha": "^2.3.3",
    "node-license-validator": "^1.1.0",
    "nodemon": "^1.7.1",
    "sinon": "^1.17.1",
    "sinon-chai": "^2.8.0",
    "standard": "^5.3.1"
  },
  "standard": {
    "parser": "babel-eslint"
  }
}
